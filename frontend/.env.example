# Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api/v1
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_TITLE=Project Management Blog
VITE_APP_DESCRIPTION=Your source for project management insights and best practices
VITE_APP_URL=http://localhost:3000

# Authentication
VITE_JWT_STORAGE_KEY=pm_blog_token
VITE_SESSION_TIMEOUT=7200000

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_SOCIAL_SHARING=true

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Development
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=false

# Social Media
VITE_TWITTER_HANDLE=@pmblog
VITE_FACEBOOK_PAGE=
VITE_LINKEDIN_PAGE=

# SEO
VITE_DEFAULT_META_IMAGE=/images/og-image.jpg
VITE_SITE_KEYWORDS=project management,blog,productivity,agile,scrum

# Performance
VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true
VITE_CACHE_DURATION=3600
